FROM ghcr.io/intertwin-eu/itwinai-dev:0.2.2.dev-torch2.4-jammy

COPY requirements.txt ./requirements.txt

#https://docs.nvidia.com/datacenter/cloud-native/container-toolkit/latest/docker-specialized.html
ENV NVIDIA_VISIBLE_DEVICES=all
ENV NVIDIA_DRIVER_CAPABILITIES=compute,utility

ENV PYTHONPATH="/home/jovyan/.local/lib/python3.10/site-packages/"

# mlflow tracking server
ENV MLFLOW_TRACKING_INSECURE_TLS='true'
ENV MLFLOW_TRACKING_USERNAME='iacopo.ferrario@eurac.edu'
ENV MLFLOW_TRACKING_URI='https://mlflow.intertwin.fedcloud.eu/'


RUN pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt 


RUN mkdir -p ./use-case

COPY src/config.yaml ./use-case




